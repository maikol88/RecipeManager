<%= render 'shared/errors', obj: @chef %>

<div class ="row">

  <div class="center">
  <% if not logged_in? %>
      <p><strong>To have your picture included in your profile please register first on <%= link_to "Gravatar", "https://signup.wordpress.com/signup", :target => "_blank" %></strong></p>
  <% end %>
  </div>

  <div class="well col-md-8 col-md-offset-2">

    <%= form_for @chef do |f|%>
        <%= f.label :chefname %>
        <%= f.text_field :chefname %>

        <%= f.label :email %>
        <%= f.email_field :email%>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit(@chef.new_record? ? 'Register' : 'Edit profile', class: "btn button-profile" )%>
    <% end %>
  </div>
</div>